{% extends "layoutAdmin.njk" %}

{% block content %}

    <h2>Gerenciar Receitas</h2>
    <a class="buttonCreate" href="/admin/create">Nova receita</a>

    <section class="cardsAdmin">
        {% for item in items %}
        <div class="cardAdmin">
            <div class="cardAdmin__image-container">
                <img src="{{item.receita_url}}" alt="Imagem do {{item.name}}">
            </div>
            <div class="cardAdmin__info">
                <p>{{item.name}}</p>
                <p class="cardAdmin_info_creator">por {{item.criador_name}}</p>
                <a href='/admin/receita/{{item.id}}'>Visualizar</a>
            </div>
        </div>
        {% endfor %}
    </section>

{% endblock %}